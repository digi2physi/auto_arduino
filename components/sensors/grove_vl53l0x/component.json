{
  "name": "Grove VL53L0X Time of Flight Distance Sensor",
  "type": "sensor",
  "category": "distance",
  "difficulty": "beginner",
  "interface": "I2C",
  "manufacturer": "Seeed Studio",
  "basedOn": "VL53L0X",
  "i2cAddress": "0x29",
  "inputs": [],
  "outputs": [
    {
      "name": "distance",
      "type": "int",
      "unit": "mm",
      "range": "30-2000",
      "description": "Distance measurement in millimeters"
    },
    {
      "name": "distanceCm",
      "type": "float",
      "unit": "cm",
      "range": "3-200",
      "description": "Distance measurement in centimeters"
    },
    {
      "name": "isValid",
      "type": "bool",
      "description": "Whether the reading is valid (in range)"
    }
  ],
  "parameters": [
    {
      "name": "READ_INTERVAL",
      "type": "int",
      "default": 100,
      "unit": "ms",
      "description": "Time between readings"
    },
    {
      "name": "SHOW_BAR_GRAPH",
      "type": "bool",
      "default": true,
      "description": "Show visual bar graph in Serial Monitor"
    },
    {
      "name": "MAX_DISPLAY_RANGE",
      "type": "int",
      "default": 500,
      "unit": "mm",
      "description": "Maximum range for bar graph display"
    }
  ],
  "dependencies": ["Adafruit_VL53L0X.h", "Wire.h"],
  "testedWith": ["Arduino Uno", "Seeeduino"],
  "wiring": {
    "VCC": "5V (or 3.3V)",
    "GND": "GND",
    "SDA": "A4 (Uno) / pin 20 (Mega)",
    "SCL": "A5 (Uno) / pin 21 (Mega)",
    "grove_alternative": "Any I2C port"
  }
}
