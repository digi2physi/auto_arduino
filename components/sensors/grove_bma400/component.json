{
  "name": "Grove BMA400 3-Axis Accelerometer",
  "type": "sensor",
  "category": "motion",
  "difficulty": "intermediate",
  "interface": "I2C",
  "manufacturer": "Seeed Studio",
  "basedOn": "BMA400 (Bosch)",
  "i2cAddress": "0x14",
  "inputs": [],
  "outputs": [
    {
      "name": "accelX",
      "type": "float",
      "unit": "g",
      "range": "-2 to +2",
      "description": "Acceleration on X axis"
    },
    {
      "name": "accelY",
      "type": "float",
      "unit": "g",
      "range": "-2 to +2",
      "description": "Acceleration on Y axis"
    },
    {
      "name": "accelZ",
      "type": "float",
      "unit": "g",
      "range": "-2 to +2",
      "description": "Acceleration on Z axis"
    },
    {
      "name": "pitch",
      "type": "float",
      "unit": "degrees",
      "range": "-90 to +90",
      "description": "Tilt angle forward/backward"
    },
    {
      "name": "roll",
      "type": "float",
      "unit": "degrees",
      "range": "-180 to +180",
      "description": "Tilt angle left/right"
    }
  ],
  "parameters": [
    {
      "name": "READ_INTERVAL",
      "type": "int",
      "default": 100,
      "unit": "ms",
      "description": "Time between readings"
    },
    {
      "name": "SHOW_BAR_GRAPH",
      "type": "bool",
      "default": true,
      "description": "Show visual bar graph in Serial Monitor"
    }
  ],
  "dependencies": ["Grove_3Axis_Digital_Accelerometer_BMA400.h", "Wire.h"],
  "testedWith": ["Arduino Uno", "Seeeduino"],
  "wiring": {
    "VCC": "3.3V or 5V",
    "GND": "GND",
    "SDA": "A4 (Uno) / pin 20 (Mega)",
    "SCL": "A5 (Uno) / pin 21 (Mega)",
    "grove_alternative": "Any I2C port"
  }
}
