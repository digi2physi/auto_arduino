{
  "name": "Grove I2C Color Sensor v2.0",
  "type": "sensor",
  "category": "color",
  "difficulty": "beginner",
  "interface": "I2C",
  "manufacturer": "Seeed Studio",
  "basedOn": "TCS34725",
  "i2cAddress": "0x29",
  "inputs": [],
  "outputs": [
    {
      "name": "red",
      "type": "int",
      "range": "0-255",
      "description": "Red color intensity"
    },
    {
      "name": "green",
      "type": "int",
      "range": "0-255",
      "description": "Green color intensity"
    },
    {
      "name": "blue",
      "type": "int",
      "range": "0-255",
      "description": "Blue color intensity"
    },
    {
      "name": "clear",
      "type": "int",
      "range": "0-65535",
      "description": "Clear (unfiltered) light intensity"
    }
  ],
  "parameters": [
    {
      "name": "READ_INTERVAL",
      "type": "int",
      "default": 500,
      "unit": "ms",
      "description": "Time between readings"
    },
    {
      "name": "SHOW_BAR_GRAPH",
      "type": "bool",
      "default": true,
      "description": "Show visual bar graph in Serial Monitor"
    }
  ],
  "dependencies": ["Adafruit_TCS34725.h", "Wire.h"],
  "testedWith": ["Arduino Uno", "Seeeduino"],
  "wiring": {
    "VCC": "3.3V or 5V",
    "GND": "GND",
    "SDA": "A4 (Uno) / pin 20 (Mega)",
    "SCL": "A5 (Uno) / pin 21 (Mega)",
    "grove_alternative": "Any I2C port"
  }
}
